<%= javascript_pack_tag 'messages'%>
<%= stylesheet_link_tag 'channels' %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10">
      <div class="row">
        <h1><%= @channel.name %></h1>
      </div>
      <div class="row">
        <ul class="list-group" id="messageContainer" style="overflow:auto;height: calc(85vh - 10rem);">
          <%= render template: "messages/show" %>
        </ul>
      </div>
    </div>
    <div class="col-sm-2">
      <h1 class="h3 mb-3" style="align-content: left;">User List</h1>
        <div class="bd-sidebar p-0" style="overflow-y:scroll; height: calc(85vh - 10rem);align-items: left;">
              <div class="card">
                  <ul class="list-group list-group-flush">
                    <% @users.each do |user| %>
                      <% if user.username == "guest" %>
                        <% next %>
                      <% end %>

                      <a href='/users/<%= user.id %>' class="list-group-item list-group-item-action border-0">
                        <div class="d-flex align-items-center">
                          <% if user.image.attached? %>
                            <%= image_tag(user.image, width:"40", height:"40")%> 
                          <% end %> 
                            <strong><%= user.username %></strong>
                        </div>
                      </a>
                    <% end %>
                    <hr class="d-block d-lg-none mt-1 mb-0">
                  </ul>
              </div>
        </div>
    </div>
  </div>
  <div class="col-md-9">
      <%= form_with model: [@channel,@channel.messages.build], :local=> false,:id=>"messageBar" do |f| %>
          <%= f.text_field :content %>
          <%= f.submit "Send message", class: "btn btn-primary"%>
      <% end %>
  </div>
</div>

