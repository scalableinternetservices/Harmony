<h1><%= @channel.name %></h1>
<%= render_async channel_path(@channel), interval: 10000 %>
<%= link_to "back to channels", "/"%>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>
    console.log("IN script")
    $('document').ready(startInterval)
    function startInterval(){
      console.log("IN start")
      setInterval(getMessages, 5000);
    }

    function getMessages(){
      console.log("IN getMessages")
      $("[data-behavior='message-items']").html("<%= j (render template: "messages/show") %>")
      
    }
</script>
<div data-behavior="message-items"></div>
<div class="messageBar">
  <%= form_with model: [@channel,@channel.messages.build] do |f| %>
    <%= f.text_field :content %>
    <%= f.submit "Send message", class: "btn btn-primary"%>
  <% end %>
</div>

<h1>user list</h1>
<div class="show-user-list">
  <% @users.each do |user| %>
    <% if user.username == "guest" %>
      <% next %>
    <% end %>
    <div class="user">
      <%= user.username%>
    </div>
  <% end %>
</div>
