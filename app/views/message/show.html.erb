<div class="Messaging">
    <div class="showMessage">
        <% if @message then%>
            <% @messages.each do |message| %>
            <div class="message">
                <%= message.content%>
            </div>
            <% end %>
        <% end%>
    </div>
    <div class="messageBar">
        <%= form_for :message, :url => { :controller => "message", :action => "show" } do |f| %>
        <%= f.text_field :content %>
        <%= f.submit "Send message", class: "btn btn-primary"%>
        <% end %>
    </div>
</div>