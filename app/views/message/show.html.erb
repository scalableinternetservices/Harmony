<h2>Messages</h2>
<div class="Messaging">
    <div class="showMessage">
        <% @messages.each do |message| %>
            <div class="message">
                <%= message.content%>
            </div>
        <% end %>
    </div>
    <div class="messageBar">
        <%= form_for :message do |f| %>
        <%= f.text_field :content %>
        <%= f.submit "Send message", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>